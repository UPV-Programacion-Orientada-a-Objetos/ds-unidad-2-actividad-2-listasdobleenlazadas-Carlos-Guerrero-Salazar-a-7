# --- Parámetros de Configuración Básicos (Reemplazados por CMake) ---

PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = "@PROJECT_VERSION@"
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/doc

# La clave: Asegúrate de que Doxygen escanee TODOS los directorios con código.
# IMPORTANTE: Agrega aquí la carpeta con el código de Arduino
INPUT                  = @CMAKE_CURRENT_SOURCE_DIR@/include \
                         @CMAKE_CURRENT_SOURCE_DIR@/src \
                         @CMAKE_CURRENT_SOURCE_DIR@/main.cpp \
                         @CMAKE_CURRENT_SOURCE_DIR@/arduino \
                         @CMAKE_CURRENT_SOURCE_DIR@/README.md

RECURSIVE              = YES
FILE_PATTERNS          = *.c *.cpp *.h *.hpp *.ino

# --- Soluciones Clave para Forzar la Extracción de Código ---

# 1. FORZAR la documentación de todas las entidades
EXTRACT_ALL            = YES

# 2. Extraer miembros privados y estáticos
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES

# 3. Habilitar el preprocesador C++
ENABLE_PREPROCESSING   = YES

# 4. Incluir archivos sin documentación
HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO

# 5. Generar gráficos de llamadas y jerarquías
HAVE_DOT               = NO
CALL_GRAPH             = NO
CALLER_GRAPH           = NO

# 6. Formato de salida
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# 7. Mostrar warnings para debugging
QUIET                  = NO
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_IF_DOC_ERROR      = YES

# 8. Configuración de parseo
JAVADOC_AUTOBRIEF      = YES
OPTIMIZE_OUTPUT_FOR_C  = NO

# 9. Muestra el codigo
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
STRIP_CODE_COMMENTS    = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES

# 10. Permitir la modificación de la introducción(usar el readme como portada)
MARKDOWN_SUPPORT       = YES
USE_MDFILE_AS_MAINPAGE = README.md